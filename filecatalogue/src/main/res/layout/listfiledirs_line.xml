<?xml version="1.0" encoding="utf-8"?>
<TableRow
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_span="1">
	<com.farrusco.projectclasses.widget.ButtonExt
		android:id="@+id/btnRefresh"
		android:theme="@style/Project.ButtonStyle"
		android:layout_height="@dimen/normal_48sp"
		android:layout_width="wrap_content"
		android:layout_marginStart="@dimen/normal_4sp"
		android:layout_marginEnd="@dimen/normal_4sp"
		android:text="@string/refresh"/>

	<com.farrusco.projectclasses.widget.TextViewExt
		android:id="@+id/colText1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:theme="@style/Project.TextViewStyle.Large"
		android:textColor="@color/white"
		android:gravity="center_vertical"
		android:layout_marginEnd="@dimen/normal_4sp"
		android:labelFor="@id/btnRefresh"/>

	<include
		layout="@layout/button_popupmenu"
		android:layout_width="@dimen/normal_48sp"
		android:layout_height="@dimen/normal_48sp"
		android:layout_marginEnd="@dimen/normal_4sp" />
</TableRow>