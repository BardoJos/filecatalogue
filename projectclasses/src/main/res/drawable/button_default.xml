<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/white"
                android:endColor="@color/LightGrey"
                android:type="linear"
                >
            </gradient>
            <corners
                android:topLeftRadius="@dimen/normal_4sp"
                android:topRightRadius="@dimen/normal_4sp"
                android:bottomLeftRadius="@dimen/normal_4sp"
                android:bottomRightRadius="@dimen/normal_4sp"
                >
            </corners>
            <padding
                android:bottom="@dimen/margin_default"
                android:left="@dimen/margin_default"
                android:top="@dimen/margin_default"
                android:right="@dimen/margin_default" />
            <stroke
                android:width="@dimen/normal_1sp"
                android:color="@color/Black"
                >
            </stroke>
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/white"
                android:endColor="@color/DarkGray"
                android:type="linear"
                >
            </gradient>
            <corners
                android:topLeftRadius="@dimen/normal_4sp"
                android:topRightRadius="@dimen/normal_4sp"
                android:bottomLeftRadius="@dimen/normal_4sp"
                android:bottomRightRadius="@dimen/normal_4sp"
                >
            </corners>
            <padding
                android:bottom="@dimen/margin_default"
                android:left="@dimen/margin_default"
                android:top="@dimen/margin_default"
                android:right="@dimen/margin_default" />
            <stroke
                android:width="@dimen/normal_1sp"
                android:color="@color/Black"
                >
            </stroke>
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/white"
                android:endColor="@color/white"
                android:type="linear"
                >
            </gradient>
            <corners
                android:topLeftRadius="@dimen/normal_4sp"
                android:topRightRadius="@dimen/normal_4sp"
                android:bottomLeftRadius="@dimen/normal_4sp"
                android:bottomRightRadius="@dimen/normal_4sp"
                >
            </corners>
            <padding
                android:bottom="@dimen/margin_default"
                android:left="@dimen/margin_default"
                android:top="@dimen/margin_default"
                android:right="@dimen/margin_default" />
            <stroke
                android:width="@dimen/normal_1sp"
                android:color="@color/Black"
                >
            </stroke>
        </shape>
    </item>
</selector>