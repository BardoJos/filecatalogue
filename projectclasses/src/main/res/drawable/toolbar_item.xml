<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_enabled="true">
        <shape>
            <size
                android:height="@dimen/normal_35sp">
            </size>
            <gradient
                android:angle="90"
                android:startColor="@android:color/holo_green_dark"
                android:endColor="@android:color/background_dark"
                android:type="linear">
            </gradient>
            <corners
                android:topLeftRadius="@dimen/normal_4sp"
                android:topRightRadius="@dimen/normal_4sp"
                android:bottomLeftRadius="@dimen/normal_4sp"
                android:bottomRightRadius="@dimen/normal_4sp">
            </corners>
            <padding
                android:bottom="@dimen/margin_default"
                android:left="@dimen/margin_default"
                android:top="@dimen/margin_default"
                android:right="@dimen/margin_default" />
            <stroke
                android:width="@dimen/normal_1sp"
                android:color="@android:color/darker_gray">
            </stroke>
        </shape>
    </item>

    <item  android:state_enabled="false">
        <shape>
            <size
                android:height="@dimen/normal_35sp">
            </size>
            <gradient
                android:angle="90"
                android:startColor="@android:color/holo_red_dark"
                android:endColor="@android:color/background_dark"
                android:type="linear">
            </gradient>
            <corners
                android:topLeftRadius="@dimen/normal_4sp"
                android:topRightRadius="@dimen/normal_4sp"
                android:bottomLeftRadius="@dimen/normal_4sp"
                android:bottomRightRadius="@dimen/normal_4sp">
            </corners>
            <padding
                android:bottom="@dimen/margin_default"
                android:left="@dimen/margin_default"
                android:top="@dimen/margin_default"
                android:right="@dimen/margin_default" />
            <stroke
                android:width="@dimen/normal_1sp"
                android:color="@android:color/darker_gray">
            </stroke>
        </shape>

    </item>
</selector>