<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style
		name="Dialog"
		parent="android:style/Theme.Dialog">
		<item
			name="android:windowBackground">@null</item>
		<item
			name="android:windowNoTitle">true</item>
		<item
			name="android:windowIsFloating">true</item>
	</style>
	<style name="AppThemeBase" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. Theme_DeviceDefault_Light_DarkActionBar -->
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>

	</style>

	<style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. Theme_DeviceDefault_Light_DarkActionBar -->
		<item name="android:windowBackground">@color/black</item>
	</style>

	<style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:buttonBarButtonStyle">@style/AlertButtonStyle</item>
		<item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
		<item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
		<item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
	</style>

	<style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/Green</item>
		<item name="android:textStyle">bold</item>
		<item name="backgroundTint">@color/LightGrey</item>
	</style>
	<style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/Red</item>
		<item name="android:textStyle">bold</item>
		<item name="backgroundTint">@color/LightGrey</item>
	</style>
	<style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/Red</item>
		<item name="android:textStyle">bold</item>
		<item name="backgroundTint">@color/LightGrey</item>
	</style>

	<style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textSize">@dimen/font_size_textview</item>
		<item name="android:textColor">@color/Blue</item>
	</style>

	<style name="Theme.Project.Base" parent="Theme.Material3.DynamicColors.Dark">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">true</item>
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/design_default_color_primary</item>
		<!-- Secondary brand color. -->
		<!-- Status bar color. -->
		<!-- Customize your theme here. -->
		<item name="android:windowDisablePreview">true</item>
		<item name="android:toolbarStyle">@style/Widget.Material3.Toolbar</item>
		<item name="android:itemBackground">@drawable/toolbar_item</item>
		<item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>

		<item name="android:editTextStyle">@style/Project.EditTextStyle</item>
		<item name="android:textViewStyle">@style/Project.TextViewStyle</item>
		<item name="android:buttonStyle">@style/Project.ButtonStyle</item>
		<item name="android:actionOverflowButtonStyle">@style/ThreeDotColor</item>

		<item name="android:spinnerStyle">@style/SpinnerStyle</item>
		<item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
		<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>

	</style>

	<style name="ThreeDotColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
		<item name="tint">@color/White</item>
		<!--<item name="buttonSize">@dimen/font_size_textview</item>-->
		<item name="android:src">@drawable/ic_menu</item>
	</style>

	<style name="MenuItemTextAppearance">
		<item name="android:textColor">@color/White</item>
		<item name="android:textSize">@dimen/font_size_textview</item>
	</style>

</resources>
