<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Project.EditTextStyle" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_edittext</item>
    </style>

    <style name="Project.EditTextStyle.Large" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_edittext</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Project.EditTextStyle.Big" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_35sp</item>
    </style>

    <style name="Project.EditTextStyle.Ultra" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_35sp</item>
       <item name="android:background">@drawable/edittext_gradient</item>
        <item name="autoScale">true</item>
    </style>

    <style name="Project.TextViewStyle" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_textview</item>
    </style>

    <style name="Project.TextViewStyle.Large" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_textview</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Project.ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textViewStyle">@style/Project.TextViewStyle</item>
        <item name="android:textSize">@dimen/font_size_textview</item>
    </style>

    <style name="Project.ButtonStyle.Large" parent="Project.ButtonStyle">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Project.TitleStyle" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_textview</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/Black</item>
    </style>

    <style name="Project.ListTitleStyle" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/normal_24sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/Black</item>
    </style>

    <style name="EditText" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_edittext</item>
        <item name="android:layout_height">@dimen/layout_height_edittext</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="TextView" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/Yellow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_textview</item>
    </style>

    <style name="Switch" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_edittext</item>
        <item name="android:layout_height">@dimen/layout_height_edittext</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>


    <style name="Project.SpinnerTheme" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/Green</item>
        <item name="android:textSize">@dimen/normal_48sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/normal_48sp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:paddingLeft">@dimen/margin_default</item>
        <item name="android:paddingRight">@dimen/normal_20sp</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:gravity">top</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <item name="android:dropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="android:background">@drawable/spinner_gradient</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/normal_48sp</item>
        <item name="android:background">@drawable/spinner_dropdown_item_gradient</item>
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/normal_48sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/normal_24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="actionbarstyle" parent="Widget.Material3.Toolbar">
        <item name="android:textSize">@dimen/normal_24sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:colorPrimary">@color/Blue</item>
        <item name="toolbarStyle">@style/Toolbar.TitleText</item>
    </style>

    <style name="actionbarstyle2" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:textSize">@dimen/normal_24sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:colorPrimary">@color/Blue</item>
        <item name="toolbarStyle">@style/Toolbar.TitleText</item>
    </style>

    <style name="Project.DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- tutorialsbuzz.com/2019/09/android-datepicker-dialog-styling-kotlin.html -->
        <item name="android:textSize">@dimen/normal_30sp</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="Project.TabLayoutDual" parent="Project.TextViewStyle.Large">
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
